{
  "name": "lark-treasure-chest",
  "version": "2.1.7",
  "private": false,
  "files": [
    "dist"
  ],
  "main": "./dist/lark-treasure-chest.umd.js",
  "module": "./dist/lark-treasure-chest.es.js",
  "exports": {
    ".": {
      "import": "./dist/lark-treasure-chest.es.js",
